{
  "name": "isaac-dev-x86",
   "build": {
    "dockerfile": "Dockerfile.isaac",
    "context": "../.."
  },


  "initializeCommand": "xhost + || true",

  "runArgs": [
    "--gpus", "all",
    "--net=host",
    "--ipc=host",

    "--volume", "/tmp/.X11-unix:/tmp/.X11-unix:rw",

    "--device", "/dev/dri",

    "--env", "NVIDIA_VISIBLE_DEVICES=all",
    "--env", "NVIDIA_DRIVER_CAPABILITIES=all",
    "--env", "QT_X11_NO_MITSHM=1"
  ],

  "workspaceMount": "source=${localWorkspaceFolder}/ros2_src,target=/home/ros_user/ros2_ws/src,type=bind,consistency=cached",
  "workspaceFolder": "/home/ros_user/ros2_ws",

  "containerEnv": {
    "ROS_DISTRO": "humble",
    "DISPLAY": "${localEnv:DISPLAY}"
  },


  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "twxs.cmake",
        "ms-vscode.cpptools",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "files.eol": "\n",
        "editor.wordWrap": "on"
      }
    }
  }
}
